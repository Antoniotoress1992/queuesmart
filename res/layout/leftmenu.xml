<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2C323F"
    android:clickable="true"
    android:id="@+id/rlFrame">
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="100dp"
	    android:id="@+id/rlBanner"
	    android:background="@drawable/search_background"
	    android:textAlignment="center">

	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/logo" />

	</RelativeLayout>
	<RelativeLayout
            android:id="@+id/rl_left_home"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:clickable="true"
            android:layout_below="@+id/rlBanner">

	    	<RelativeLayout
	    	    android:id="@+id/layout_home"
	    	    android:layout_width="80dp"
	    	    android:layout_height="50dp"
	    	    android:layout_marginLeft="30dp" >

		    		<ImageView
		    		    android:id="@+id/img_left_home"
		    		    android:layout_width="25dp"
		    		    android:layout_height="25dp"
		    		    android:layout_centerHorizontal="true"
		    		    android:layout_centerVertical="true"
		    		    android:src="@drawable/search" />

		    </RelativeLayout>
		    <RelativeLayout
                    android:id="@+id/layout_home_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" 
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp">
					<TextView
					   	android:id="@+id/txt_home"
					   	android:layout_width="wrap_content"
					   	android:layout_height="wrap_content"
					   	android:textColor="#FFFFFF"
					   	android:textSize="20sp"
					   	android:layout_centerInParent="true"
                    	android:text="@string/menu_home"
					   	android:gravity="center"
					   	android:layout_marginLeft="10dp"
					   	android:layout_centerVertical="true"/>
			</RelativeLayout>
	</RelativeLayout>  
	<RelativeLayout
            android:id="@+id/rl_left_status"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_below="@+id/rl_left_home"
            android:clickable="true" >
	    	<RelativeLayout
                    android:id="@+id/layout_add_product"
                    android:layout_width="80dp"
                    android:layout_height="50dp" 
                    android:layout_marginLeft="30dp">

		    		<ImageView
		    		    android:id="@+id/img_add_product"
		    		    android:layout_width="21dp"
		    		    android:layout_height="21dp"
		    		    android:layout_centerHorizontal="true"
		    		    android:layout_centerVertical="true"
		    		    android:src="@drawable/add_projects" />

		    </RelativeLayout>
		    <RelativeLayout
                    android:id="@+id/layout_add_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" 
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp"
                    >
					<TextView
					    android:id="@+id/txtStatus"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_centerVertical="true"
					    android:layout_marginLeft="10dp"
					    android:gravity="center"
					    android:text="@string/menu_status"
					    android:textColor="#FFFFFF"
					    android:textSize="20sp" />

			</RelativeLayout>
	</RelativeLayout>  
	<RelativeLayout
            android:id="@+id/rl_left_signout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:layout_below="@+id/rl_left_status"
            android:clickable="true">
	    	<RelativeLayout
                    android:id="@+id/layout_sign"
                    android:layout_width="80dp"
                    android:layout_height="50dp" 
                    android:layout_marginLeft="30dp">

		    		<ImageView
		    		    android:id="@+id/img_sign_out"
		    		    android:layout_width="25dp"
		    		    android:layout_height="25dp"
		    		    android:layout_centerHorizontal="true"
		    		    android:layout_centerVertical="true"
		    		    android:src="@drawable/sign_out" />

		    </RelativeLayout>
		    
		    <RelativeLayout
                    android:id="@+id/layout_sign_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" 
                    android:layout_centerInParent="true" >
					<TextView
					   	android:id="@+id/txt_sign_out"
					   	android:layout_width="wrap_content"
					   	android:layout_height="wrap_content"
					   	android:textColor="#FFFFFF"
					   	android:textSize="20sp"
					   	android:layout_centerInParent="true"
                    	android:text="@string/menu_sign_out"
					   	android:gravity="center"
					   	android:layout_marginLeft="10dp"
					   	android:layout_centerVertical="true"/>
			</RelativeLayout>
	</RelativeLayout>  
	
</RelativeLayout>