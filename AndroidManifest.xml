<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.src.queuesmart"
    android:versionCode="1"
    android:versionName="1.0"
    android:installLocation="preferExternal" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
	<uses-permission android:name="android.permission.INTERNET" />
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:name=".Global"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.src.queuesmart.LoginActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.src.queuesmart.SearchActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.src.queuesmart.SearchResultActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.src.queuesmart.StoreResultAdapterActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.src.queuesmart.SignUpActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.src.queuesmart.StoreDetailActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
         <activity
            android:name="com.src.queuesmart.StoreDetailNextActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
         <activity
            android:name="com.src.queuesmart.StatusAdapter"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.src.queuesmart.StatusActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
